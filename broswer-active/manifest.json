{
  "manifest_version": 2,
  "name": "demo",
  "version": "1.0.0",
  "description": "插件开发学习",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "img/ice.png",
      "32": "img/ice.ico"
    }
  },
  "icons": {
    "64": "./img/ice.png",
    "32": "./img/ice.ico"
  },
  "options_page": "options.html"
}